@model ConnectMedia.Common.DTO.ForgetEmailDTO

@{
  Layout = "~/Views/Shared/_EmptyLayout.cshtml";
  ViewData["Title"] = "Forgot Password";
}
<div class="card-body">
  <form class="form-horizontal" asp-action="ForgotPassword">
    <div class="form-group ">
      <div class="col-xs-12">
        <h3>Recover Password</h3>
        <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
      </div>
    </div>
    <div class="form-group ">
      <div class="col-xs-12">
        <input asp-for="Email" class="form-control" type="text" required="" placeholder="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
      </div>
    </div>
    <div class="form-group text-center m-t-20">
      <div class="col-xs-12">
        <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
      </div>
    </div>

  </form>
</div>