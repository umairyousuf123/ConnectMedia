@model ConnectMedia.Common.Model.News

@{
  string perform = "Create";
  if (Model.Id > 0) { perform = "Edit"; }
  ViewData["Title"] = perform + " Whats'On";
}
<!-- Row -->
<div class="row">
  <div class="col-lg-12">
    <div class="card card-outline-info">
      <div class="card-header">
        <h4 class="m-b-0 text-white">Create Notice</h4>
      </div>
      <div class="card-body">
        <form asp-action="Create">
          <div class="form-body">
            <div class="row p-t-20">
              <div class="col-md-12">
                <div class="form-group">
                  <input asp-for="Id" class="form-control" hidden />
                </div>
                <div class="form-group">
                  <label asp-for="IssueDate" class="control-label"></label>
                  <input asp-for="IssueDate" class="form-control" />
                </div>
                <div class="form-group">
                  <label class="control-label" asp-for="Type">Update News Type</label>
                  <input type="text" asp-for="Type" id="Type" class="form-control" placeholder="New Dashboard Coming">
                  <!-- <small class="form-control-feedback"> This is inline help </small> </div> -->
                </div>
                <div class="form-group">
                  <label class="control-label" asp-for="Heading">Update News Heading</label>
                  <input type="text" asp-for="Heading" id="Heading" class="form-control" placeholder="New Dashboard Coming">
                  <!-- <small class="form-control-feedback"> This is inline help </small> </div> -->
                </div>
                <div class="form-group">
                  <label class="control-label" asp-for="Description">Update News Content</label>
                  <textarea type="text" asp-for="Description" id="Description" class="form-control" rows="5" placeholder="Updated Dashboard News"></textarea>
                </div>
              </div>

              <!--/span-->
            </div>
          </div>
          <!--/row-->
          <div class="form-actions">
            <button type="submit" class="btn btn-success"> <i class="fa fa-check"></i> Save</button>
            <button type="button" class="btn btn-inverse">Cancel</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>


