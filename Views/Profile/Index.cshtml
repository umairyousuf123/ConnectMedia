@model List<ConnectMedia.Common.DTO.UserGridView>

@{
  ViewData["Title"] = "Index";
  Layout = "~/Views/Shared/_Layout.cshtml";
  int count = 0;

}
<!-- ============================================================== -->
<!-- All Jquery -->
<!-- ============================================================== -->
@*<script src="~/assets/plugins/jquery/jquery.min.js"></script>*@

<!-- Footable -->
<script src="./assets/plugins/footable/js/footable.all.min.js"></script>
@*<script src="../assets/plugins/bootstrap-select/bootstrap-select.min.js" type="text/javascript"></script>*@
<!--FooTable init-->
<script src="~/js/footable-init.js"></script>


<div class="row mb-3">
  <div class="offset-10 col-lg-2 col-md-2">
    <a type="button"
       class="btn waves-effect waves-light btn-block btn-success"
       asp-controller="Profile" asp-action="Changes">Add User</a>
  </div>
</div>
@{
  if (ViewData["Success"] != null)
  {
    <div class="green">
      <p><strong>Success:</strong> @ViewData["Success"].ToString()</p>
    </div>
  }
}
<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        @*<h4 class="card-title">Contact Emplyee list</h4>
          <h6 class="card-subtitle"></h6>*@
        <div class="table-responsive">
          <table id="demo-foo-addrow" class="table m-t-0 table-hover contact-list" data-page-size="10">
            <thead>
              <tr>
                <th>No</th>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Building</th>
                <th>Role</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                count++;
                <tr>
                  <td>@count.ToString()</td>
                  <td>
                    @item.FullName
                  </td>
                  <td>@item.Email</td>
                  <td>@item.ContactNumber</td>
                  <td>@item.BuildingName</td>
                  <td><span class="label label-danger">@item.RoleName</span> </td>
                  <td>
                    <a class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" asp-action="Changes" asp-route-id="@item.Id" asp-route-template="1"><i class="fa fa-pencil" aria-hidden="true"></i></a>
                    <a class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                  </td>
                </tr>
              }
            </tbody>
            @*<tfoot>
                <tr>
                  <td colspan="7">
                    <div class="text-right">
                      <ul class="pagination">@Model.Count </ul>
                    </div>
                  </td>
                </tr>
              </tfoot>*@
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

