@model List<ConnectMedia.Common.Model.UploadFile>

@{
  ViewData["Title"] = "Building";
  Layout = "~/Views/Shared/_Layout.cshtml";
  int count = 0;
}

<div class="row mb-3">
  <div class="offset-10 col-lg-2 col-md-2">
    <a type="button" class="btn waves-effect waves-light btn-block btn-success" asp-action="Create">Add Tutorial</a>
  </div>
</div>

<div class="row">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <div class="table-responsive">
          <table id="demo-foo-addrow" class="table m-t-0 table-hover contact-list" data-page-size="10">
            <thead>
              <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Desc</th>
                <th>Sequence</th>
                <th>Portion</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              @foreach (var item in Model)
              {
                count++;
                <tr>
                  <td>@count.ToString()</td>
                  <td>
                    @item.Title
                  </td>
                  <td>@item.Desc</td>
                  <td>@item.Sequence</td>
                  <td>
                    @{
                      var TutorialTypeEnum = (ConnectMedia.Common.Enum.TutorialType)item.Portion;
                      string PortionName = TutorialTypeEnum.ToString();
                    }
                    @PortionName
                  </td>
                  <td>
                    <a class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" asp-action="Create" asp-route-id="@item.Id"><i class="fa fa-edit" aria-hidden="true"></i></a>
                    <a class="btn btn-sm btn-icon btn-pure btn-outline delete-row-btn" asp-action="Delete" asp-route-id="@item.Id"><i class="fa fa-trash" aria-hidden="true"></i></a>
                  </td>
                </tr>
              }
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

